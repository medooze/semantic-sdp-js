{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "lib": ["ES2018"],
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "declarationMap": true
  }
}
